{
    "name": "lenk0belk0/todo-list",
    "type": "project",
    "license": "GNU GPL",
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "authors": [
        {
            "name": "Elena Anisimova",
            "email": "el.n.anisimova@yandex.ru"
        }
    ],
    "require": {
        "php": "^7.4",
        "ext-json": "^7.4",
        "php-di/php-di": "^6.1",
        "ramsey/uuid": "^4.0",
        "slim/psr7": "^1.0",
        "slim/slim": "^4.5",
        "symfony/console": "^5.0",
        "webmozart/assert": "^1.8"
    }
    ,
    "require-dev": {
        "phpunit/phpunit": "^9.1",
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "*",
        "vimeo/psalm": "^3.11"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "run-test": "phpunit",
        "check-code": [
            "psalm",
            "phpcbf src --standard=PSR2",
            "phpcs src --standard=PSR2",
            "phpcbf tests --standard=PSR2",
            "phpcs tests --standard=PSR2"
        ]
    }
}
